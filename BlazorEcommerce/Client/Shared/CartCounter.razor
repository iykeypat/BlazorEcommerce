@inject ICartService CartService
@inject ISyncLocalStorageService LocalStorage
@implements IDisposable

<a href="cart" class="btn" style="margin-left:10px; color: white; background-color:#feb20a;" >
    <i style="color:white" class="oi oi-cart"> <span class="badge" style="display:inline">@GetCartItemsCount()</span> </i>
</a>

@code {
    private int GetCartItemsCount(){
        var count = LocalStorage.GetItem<int>("cartItemsCount");
        return count;
    }

    protected override void OnInitialized()
    {
        CartService.OnChange += StateHasChanged;
    }

    public void Dispose(){
        CartService.OnChange -= StateHasChanged;
    }

}
